<?xml version="1.0" encoding="UTF-8"?>
<Config>

  <Connector>

    <!-- CASE 1: BROKER Connector -->
    <Broker baseURL="http://nginx:9010"/>  <!-- Base URL to DNPM-Broker forward proxy -->

    <!-- OPTIONAL:  For periodic auto-update of site list from broker: Period (in minutes)-->
    <UpdatePeriod minutes="30"/>


    <!-- CASE 2: Peer-to-peer Connector: For each connector: Site ID, name (according to defined list) and baseUrl -->
    <!--
    <Peer id="UKBsp" name="Beispielhausen" baseUrl="..."/>
    <Peer id="UKBrl" name="Berlichingen"   baseUrl="..."/>
    -->


    <!-- EITHER CASE, OPTIONAL: request timeout (in seconds), Default 10 s -->
    <!--
    <Timeout seconds="30"/>
    -->

  </Connector>


</Config>
